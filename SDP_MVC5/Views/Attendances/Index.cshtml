@model IEnumerable<SDP_MVC5.Models.Attendance>

@{
    ViewBag.Title = "My Attendence";
}

<h2>@ViewBag.Title</h2>

<p class="none">
    @Html.ActionLink("Create New", "Create")
</p>
<div class="list-group">
@foreach (var item in Model) {
    @Html.ActionLink("[" + item.attendancetime.ToString().Substring(0, 10) + "] " + item.workshopName , "Details", 
    new { id = item.ID }, 
    new { @class = "list-group-item" })
}
</div>
<table class="table none">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.workshopID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.studentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createdtime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.attendancetime)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.workshopID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.studentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.createdtime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.attendancetime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

@Html.ActionLink("Back to My Booking", "Newsession", "Home", new { }, new { @class="btn btn-default sizeFull" })
