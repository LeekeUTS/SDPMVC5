<script src="~/Scripts/SpryValidationTextField.js" type="text/javascript"></script>
<link href="~/Content/SpryValidationTextField.css" rel="stylesheet" type="text/css" />
<span class="text-danger field-validation-valid textfieldRequiredMsg">A value is required.</span>
<span class="text-danger field-validation-valid textfieldInvalidFormatMsg">Invalid format.</span>
<span class="text-danger field-validation-valid textfieldMinValueMsg">The entered value is less than the minimum required.</span>
<span class="text-danger field-validation-valid textfieldMaxValueMsg">The reminder cannot be set after the event date.</span>
<script type="text/javascript">
    var strTime = "@ViewBag.getStarting";
    var date = new Date(Date.parse(strTime.replace(/-/g, "/"))); //转换成Data();
    var finalDate = date.getFullYear()+"-"+(date.getMonth()+1)+"-"+date.getDate()
    console.log(finalDate);
    var sprytextfield1 = new Spry.Widget.ValidationTextField("sprytextfield1", "date", {
        validateOn: ["blur", "change"], format: "yyyy-mm-dd", minValue: "@DateTime.Today.ToString("yyyy-MM-dd")", maxValue: finalDate
    });
</script>